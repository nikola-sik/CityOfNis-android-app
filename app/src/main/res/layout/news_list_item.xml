<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:foreground="?android:attr/selectableItemBackground"

    card_view:cardElevation="@dimen/list_item_card_view_elevation"
    card_view:cardPreventCornerOverlap="false"
    android:layout_marginBottom="@dimen/list_item_card_view_margin_bottom">

    <RelativeLayout

        android:id="@+id/news_relative_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@android:color/white"
>

        <ImageView
            android:id="@+id/news_item_image_view"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:contentDescription="@string/app_name"
            android:padding="10dp"
            android:scaleType="centerCrop"

            android:layout_alignParentTop="true"

          />



        <TextView
            android:id="@+id/news_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/news_item_image_view"
            android:paddingTop="5dp"
            android:paddingRight="10dp"
            android:layout_alignTop="@id/news_item_image_view"
            android:textSize="15sp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/news_item_short_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/news_item_image_view"
            android:layout_alignParentLeft="true"
            android:paddingLeft="10dp"
            android:paddingBottom="10dp"
            android:paddingRight="10dp"
            android:textSize="12sp"

           />


    </RelativeLayout>


</android.support.v7.widget.CardView>